{
  "name": "andy87/yii2-file-crafter",
  "description": "PHP library for Yii2 - developed by and_y87",
  "keywords": ["and_y87", "php", "generator", "crafter", "yii2", "library"],
  "homepage": "https://andy87.ru",
  "license": "CC-BY-SA-4.0",

  "version": "1.2.1",
  "minimum-stability": "dev",

  "prefer-stable": true,

  "authors": [
    {
      "name": "Kidin Andrey",
      "email": "kidin_a@list.ru"
    }
  ],
  "require": {
    "php": ">=8.2",
    "ext-json": "*"
  },

  "require-dev": {
    "yiisoft/yii2": "~2.0.45",
    "yiisoft/yii2-gii": "~2.2.0",
    "phpunit/phpunit": "~9.5.0",
    "symfony/dom-crawler": "^6.0",
    "symfony/browser-kit": "^6.0",
    "codeception/codeception": "^5.0.0 || ^4.0",
    "codeception/lib-innerbrowser": "^4.0 || ^3.0 || ^1.1",
    "codeception/module-asserts": "^3.0 || ^1.1",
    "codeception/module-yii2": "^1.1",
    "codeception/module-filesystem": "^3.0 || ^2.0 || ^1.1",
    "codeception/verify": "^3.0 || ^2.2",
    "codeception/module-webdriver": "3.x-dev"
  },

  "autoload": {
    "psr-4": {
      "andy87\\yii2\\file_crafter\\": "src/"

    }
  },

  "autoload-dev": {
    "psr-4": {
      "andy87\\yii2\\file_crafter\\": "src/",
      "andy87\\yii2\\file_crafter\\tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "vendor/bin/phpunit"
  },

  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  },

  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
